---
import "../styles/global.css";
// import { ClientRouter } from "astro:transitions";
import Footer from "../components/Footer.astro";
const { title } = Astro.props;
---

<!-- <!doctype html> -->
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>The Virian Project</title>
        <link
            rel="stylesheet"
            href="https://lalten.github.io/lmweb/style/latinmodern-roman.css"
            type="text/css"
            charset="utf-8"
        />
    </head>
    <body>
        <slot />
        <Footer />
    </body>
</html>

<style is:global>
    :root {
        --astro-transition-duration: 300ms; /* Set your desired duration here */
    }
    ::view-transition-old(*),
    ::view-transition-new(*) {
        animation-duration: 300ms; /* Set your desired duration here */
        animation-timing-function: cubic-bezier(0.76, 0, 0.24, 1);
        animation-fill-mode: both;
    }
</style>
