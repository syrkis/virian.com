---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";

const isRoot = Astro.url.pathname === "/";
---

<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="sitemap" href="/sitemap-index.xml" />
        <meta name="generator" content={Astro.generator} />
        <title>The Virian Project</title>
        <script
            defer
            is:inline
            src="https://cloud.umami.is/script.js"
            data-website-id="1825f9e2-12c3-4ce2-8636-87d2df612010"></script>
        <link
            href="https://fonts.cdnfonts.com/css/libertinus-serif"
            rel="stylesheet"
            type="text/css"
            charset="utf-8"
        />
        <ClientRouter />
    </head>
    <body>
        <div style={isRoot ? "padding-top: 42vh;" : ""}>
            <Header />
        </div>
        <main>
            <slot />
        </main>
        <Footer />
    </body>
</html>
