---
const isRoot = Astro.url.pathname === "/";
import { ClientRouter } from "astro:transitions";

const paddingAnim = {};
---

<head> <ClientRouter /></head>

<header transition:name="header">
    <nav>
        <ul>
            <li><a href="/code">code</a></li>
            <li class="separator"><a href="/">|</a></li>
            <li><a href="/text">text</a></li>
        </ul>
    </nav>

    <style>
        header {
            text-align: center;
            padding: 2rem 0;
            font-size: 1.5em;
            letter-spacing: 0.4em;
        }

        ul {
            list-style: none;
            padding: 0;
            margin: 0;
            display: flex;
            justify-content: center;
            gap: 1rem;
        }

        li {
            display: inline-block;
            padding: 0.5em;
        }

        a {
            color: inherit;
            text-decoration: none;
        }

        .separator {
            color: inherit;
        }
    </style>
</header>
